/*gallery*/


.gallery-page {
	margin-top: 50px;
}
.img-list,
.gallery-list {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	align-items: flex-start;
}
.img-column {
	display: flex;
	flex-direction: column-reverse;
}
.img-column a,
.gallery-column a {
	border-bottom: 0px;
}
.gallery-item {
	margin-bottom: -50px
}
.gallery-item p {
	margin: 25px auto 10px;
	max-width: 50%;
	text-align: center;
	font-size: 15px;
	color: #f9a972;
	background: rgba(255,255,255,0.3);
	border-radius: 7px;
	border: 1px solid #f9a972;
	box-shadow: 0 8px 20px -8px rgba(0,0,0,.3);
}
.posts-expand .post-body .gallery-column a img {
	margin: 5px auto 0;
	border-radius: 20px;
	max-width: 90%;
	opacity: 0.8;
	box-shadow: 0px 8px 20px -10px #000;
	transition: all 0.2s linear;
	box-sizing: border-box;
	padding: 3px;
	border: 1px solid #f9a972;
	height: 250px;
	width: 300px;
	object-fit: cover;
}
@media (max-width: 767px){
	.gallery-item p {
		min-width: 75px;
		font-size: 13px;
	}
}

